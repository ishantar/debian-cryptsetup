#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

# Include dpatch stuff.
include /usr/share/dpatch/dpatch.make

config.status: configure.in
	dh_testdir
	find -xtype f ! -name manifest > manifest

	# mini autogen.sh
	rm -f ltmain.sh
	cp /usr/share/libtool/ltmain.sh ltmain.sh
	libtoolize --force --copy
	aclocal-1.9
	autoheader
	automake-1.9 --add-missing --gnu
	autoconf
	
	./configure \
		--host=$(DEB_HOST_GNU_TYPE) \
		--build=$(DEB_BUILD_GNU_TYPE) \
		--prefix=/usr \
		--sbindir=/sbin \
		--mandir=/usr/share/man
	
	find -xtype f > manifest.new
	diff manifest manifest.new | grep '>' | cut -b3- > config.mess

build: build-stamp

build-stamp: config.status patch-stamp
	dh_testdir
	#docbook-to-man debian/cryptsetup.sgml > debian/cryptsetup.8
	#docbook-to-man debian/crypttab.sgml > debian/crypttab.5
	asciidoc -d manpage -b docbook debian/crypttab.5.txt
	sed -i 's/<emphasis role="strong">/<emphasis role="bold">/g' debian/crypttab.5.xml
	xsltproc -o debian/crypttab.5 /usr/share/xml/docbook/stylesheet/nwalsh/manpages/docbook.xsl \
		debian/crypttab.5.xml
	pod2man --section=8 --center="Administrative commands" --release="" debian/luksformat \
		debian/luksformat.8
	$(MAKE)
	# cannot depend on libraries in /usr !
	gcc lib/.libs/*.o src/*.o luks/.libs/*.o -o src/cryptsetup.static \
		-lpopt -ldevmapper -luuid /usr/lib/libgcrypt.a \
		/usr/lib/libgpg-error.a
	touch build-stamp

clean: unpatch
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	if test -f Makefile; then $(MAKE) clean; fi
	if test -f config.mess; then rm -f `cat config.mess`; fi

	rm -f debian/crypttab.5 debian/crypttab.5.xml config.mess
	rm -rf autom4te.cache m4
	rm -f src/cryptsetup.static

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	$(MAKE) DESTDIR=$(CURDIR)/debian/cryptsetup install
	cp src/cryptsetup.static $(CURDIR)/debian/cryptsetup/sbin/cryptsetup

	install -m 0644 debian/init_functions $(CURDIR)/debian/cryptsetup/lib/cryptsetup/
	install -m 0644 debian/cryptsetup.8 $(CURDIR)/debian/cryptsetup/usr/share/man/man8/
	install -m 0755 debian/checks/* $(CURDIR)/debian/cryptsetup/lib/cryptsetup/checks/
	install -m 0755 debian/luksformat $(CURDIR)/debian/cryptsetup/sbin/
	install -m 0644 debian/cryptsetup.lintian-override \
			$(CURDIR)/debian/cryptsetup/usr/share/lintian/overrides/cryptsetup
	rmdir $(CURDIR)/debian/cryptsetup/usr/lib/cryptsetup

binary-indep: build install
# We have nothing to do by default.

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
	dh_installinit --no-start --name=cryptdisks --update-rcd-params="start 28 S . stop 48 0 6 ."
#	dh_install
	dh_installman debian/cryptsetup.8 debian/crypttab.5 debian/luksformat.8
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: binary clean binary-indep binary-arch build install patch unpatch
